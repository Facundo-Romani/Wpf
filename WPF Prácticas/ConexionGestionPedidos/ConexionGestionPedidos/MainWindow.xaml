        <Label Content="Clientes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-166,90,0,0" RenderTransformOrigin="0.846,0.808"/>
        <Label Content="Pedidos" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="9.947,2.231" Margin="205,18,0,0"/>
        <ListBox Name="pedidosClientes" HorizontalAlignment="Left" Height="225" VerticalAlignment="Top" Width="203" Margin="54,44,0,0"/>
