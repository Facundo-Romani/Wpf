    <Grid Margin="-1,0,-7,-10" Background="#FF677E7B" FlowDirection="RightToLeft" VerticalAlignment="Top" Height="581">

        <Label Content="Clientes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="451,18,0,0" RenderTransformOrigin="0.173,0.731"/>
