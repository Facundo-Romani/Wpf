        <Button Content="Borrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="517,99,0,0" RenderTransformOrigin="0.476,1.9" Height="24" Click="Button_Click_2"/>
        <TextBox Name="insertaCliente" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Margin="517,61,0,0"/>
        <Button Content="Actualizar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="517,175,0,0" Click="Button_Click_3"/>

    </Grid>
</Window>
